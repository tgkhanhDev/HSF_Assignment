<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="your.package.Controller">
    <left>
        <VBox spacing="20" style="-fx-background-color: #1a1b4b;" alignment="CENTER">
            <VBox alignment="CENTER" spacing="10">
                <ImageView fx:id="profileImage" fitHeight="100" fitWidth="100">
                    <clip>
                        <Circle radius="50" />
                    </clip>
                </ImageView>
                <Label text="Mahmoud Hamwi" style="-fx-text-fill: white; -fx-font-size: 16;" />
                <Button text="Edit Profile" style="-fx-background-color: #3a3b5a; -fx-text-fill: white;" />
            </VBox>
            <VBox spacing="10" style="-fx-padding: 20;" alignment="CENTER_LEFT">
                <Button text="Profile" style="-fx-background-color: transparent; -fx-text-fill: white;" />
                <Button text="Notifications" style="-fx-background-color: transparent; -fx-text-fill: white;" />
                <Button text="Password" style="-fx-background-color: transparent; -fx-text-fill: white;" />
                <Button text="Settings" style="-fx-background-color: transparent; -fx-text-fill: white;" />
                <Button text="Privacy Policy" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            </VBox>
        </VBox>
    </left>
    <center>
        <AnchorPane style="-fx-background-color: #2a2b6a;">
            <VBox spacing="20" style="-fx-padding: 40;">
                <Label text="My Rentals" style="-fx-text-fill: white; -fx-font-size: 24;" />
                <TableView fx:id="rentalTable" style="-fx-background-color: #3a3b5a;">
                    <columns>
                        <TableColumn text="Car Name" fx:id="carNameColumn" />
                        <TableColumn text="Pickup Date" fx:id="pickupDateColumn" />
                        <TableColumn text="Return Date" fx:id="returnDateColumn" />
                        <TableColumn text="Rent Price" fx:id="rentPriceColumn" />
                    </columns>
                </TableView>
                <Label text="Write a Review" style="-fx-text-fill: white; -fx-font-size: 24;" />
                <VBox spacing="10">
                    <HBox spacing="10">
                        <Label text="Car Name" style="-fx-text-fill: white;" />
                        <TextField fx:id="reviewCarNameField" />
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Review" style="-fx-text-fill: white;" />
                        <TextArea fx:id="reviewTextArea" prefRowCount="4" prefColumnCount="50" />
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Stars" style="-fx-text-fill: white;" />
                        <TextField fx:id="reviewStarsField" />
                    </HBox>
                    <Button text="Submit Review" style="-fx-background-color: #3a3b5a; -fx-text-fill: white;" />
                </VBox>
            </VBox>
        </AnchorPane>
    </center>
</BorderPane>
