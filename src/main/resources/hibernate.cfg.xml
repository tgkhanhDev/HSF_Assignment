<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hbm2ddl.auto">update</property>
		<property name="dialect">org.hibernate.dialect.SQLServerDialect</property>

		<property name="connection.url">jdbc:sqlserver://localhost:1433;DatabaseName=HSF_Assignment;encrypt=true;trustServerCertificate=true;</property>
		<property name="connection.username">sa</property>
		<property name="connection.password">12345</property>
		<property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>

		<mapping class="pojos.Account" />
		<mapping class="pojos.Car" />
		<mapping class="pojos.CarProducer"/>
		<mapping class="pojos.Review"/>
		<mapping class="pojos.CarRental"/>
		<mapping class="pojos.Customer"/>
	</session-factory>
</hibernate-configuration>